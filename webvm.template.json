{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "vNetName": {
            "type": "string"
        },
        "webSubnetName": {
            "type": "string"
        },
        "vmSize": {
            "type": "string"
        },
        "vmPassword": {
            "type": "securestring"
        },
        "vmUsername": {
            "type": "securestring"
        },
        "externalLoadBalancerName": {
            "type": "string"
        },
        "externalLoadBalancerBackendPoolName": {
            "type": "string"
        },
        "acceleratedNetworking": {
            "type": "bool",
            "defaultValue": true
        },
        "scaleSetName": {
            "type": "string"
        },
        "vmCount": {
            "type": "int",
            "defaultValue": 1
        },
        "vmNamePrefix": {
            "type": "string"
        }
    },
    "functions": [],
    "variables": {
        "nicName": "[concat(parameters('vmNamePrefix'), '-nic')]",
        "ipConfigName": "[concat(parameters('vmNamePrefix'), '-ip-config')]",
        "startUpExtensionName": "[concat(parameters('vmNamePrefix'), 'start-up-extension')]"
    },
    "resources": [
        {
            "type": "Microsoft.Compute/virtualMachineScaleSets",
            "name": "[parameters('scaleSetName')]",
            "apiVersion": "2021-03-01",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "[parameters('vmSize')]",
                "tier": "Standard",
                "capacity": "[parameters('vmCount')]"
            },
            "properties": {
                "overprovision": true,
                "upgradePolicy": {
                    "mode": "Automatic"
                },
                "virtualMachineProfile": {
                    "storageProfile": {
                        "imageReference": {
                            "publisher": "canonical",
                            "offer": "0001-com-ubuntu-server-focal",
                            "sku": "20_04-lts",
                            "version": "latest"
                        },
                        "osDisk": {
                            "osType": "Linux",
                            "createOption": "FromImage",
                            "caching": "ReadWrite",
                            "managedDisk": {
                                "storageAccountType": "StandardSSD_LRS"
                            },
                            "diskSizeGB": 30
                        },
                        "dataDisks": []
                    },
                    "osProfile": {
                        "computerNamePrefix": "[parameters('vmNamePrefix')]",
                        "adminUsername": "[parameters('vmUsername')]",
                        "adminPassword": "[parameters('vmPassword')]",
                        "linuxConfiguration": {
                            "disablePasswordAuthentication": false,
                            "provisionVMAgent": true
                        },
                        "secrets": [],
                        "allowExtensionOperations": true
                    },
                    "networkProfile": {
                        "networkInterfaceConfigurations": [
                            {
                                "name": "[variables('nicName')]",
                                "properties": {
                                    "primary": true,
                                    "ipConfigurations": [
                                        {
                                            "name": "[variables('ipConfigName')]",
                                            "properties": {
                                                "subnet": {
                                                    "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('vNetName'), parameters('webSubnetName'))]"
                                                },
                                                "primary": true,
                                                "privateIPAddressVersion": "IPv4",
                                                "loadBalancerBackendAddressPools": [
                                                    {
                                                        "id": "[resourceId(resourceGroup().name, 'Microsoft.Network/loadBalancers/backendAddressPools', parameters('externalLoadBalancerName'), parameters('externalLoadBalancerBackendPoolName'))]"
                                                    }
                                                ]
                                            }
                                        }
                                    ],
                                    "dnsSettings": {
                                        "dnsServers": []
                                    },
                                    "enableAcceleratedNetworking": "[parameters('acceleratedNetworking')]",
                                    "enableIPForwarding": false
                                }
                            }
                        ]
                    },
                    "extensionProfile": {
                        "extensions": [
                            {
                                "type": "Microsoft.Compute/virtualMachines/extensions",
                                "name": "[variables('startUpExtensionName')]",
                                "properties": {
                                    "autoUpgradeMinorVersion": true,
                                    "publisher": "Microsoft.Azure.Extensions",
                                    "type": "CustomScript",
                                    "typeHandlerVersion": "2.0",
                                    "settings": {
                                        "fileUris": [
                                            "https://raw.githubusercontent.com/zmad5306/node-client-1/main/scripts/ubuntu/install.sh"
                                        ]
                                    },
                                    "protectedSettings": {
                                        "commandToExecute": "sh ./install.sh"
                                    }
                                }
                            }
                        ]
                    }
                }
                
            }
        }
    ]
}