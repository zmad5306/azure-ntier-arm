{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "vNetName": {
            "type": "string"
        },
        "bastionSubnetName": {
            "type": "string"
        },
        "bastionHostSku": {
            "type": "String"
        },
        "bastionHostScaleUnits": {
            "type": "Int"
        }
    },
    "functions": [],
    "variables": {},
    "resources": [
        {
            "name": "basitionPublicIp",
            "type": "Microsoft.Network/publicIPAddresses",
            "apiVersion": "2020-11-01",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "Standard"
            },
            "properties": {  
                "publicIPAllocationMethod": "Static"
            }
        },
        {
            "type": "Microsoft.Network/bastionHosts",
            "apiVersion": "2020-04-01",
            "name": "bastion",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "[parameters('bastionHostSku')]"
            },
            "properties": {
                // "dnsName": "string",
                "ipConfigurations": [
                    {
                        "name": "bastionIp",
                        "properties": {
                            "publicIPAddress": {
                                "id": "[resourceId('Microsoft.Network/publicIPAddresses', 'basitionPublicIp')]"
                            },
                            "subnet": {
                                "id": "[resourceId(resourceGroup().name, 'Microsoft.Network/virtualNetworks/subnets', parameters('vNetName'), parameters('bastionSubnetName'))]"
                            }
                        }
                    }
                ],
                "scaleUnits": "[parameters('bastionHostScaleUnits')]"
            },
            "dependsOn": [
                "[resourceId('Microsoft.Network/publicIPAddresses', 'basitionPublicIp')]"
            ]
        }
    ],
    "outputs": {}
}